{
  "name": "tsai-plat",
  "version": "0.1.0",
  "description": "Tsailab library",
  "author": "tsailab",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "pnpm -F tsai-admin dev",
    "admin": "pnpm -F tsai-admin tsadmin",
    "build": "nest build",
    "clean": "npx rimraf ./dist/packages",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/tsai-plat/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/tsai-plat/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "8.1.0",
    "class-transformer": "^0.5.1",
    "date-fns": "4.1.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/axios": "3.1.3",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@tsailab/core-types": "0.1.13",
    "@tsailab/ioredis-mq": "0.0.4",
    "@tsailab/schematics": "^1.2.7",
    "@types/bcrypt": "5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "chalk": "4.1.2",
    "cross-env": "7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "qcloud-cos-sts": "3.1.1",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@nestjs/axios": "3.1.3",
    "@nestjs/typeorm": "^10.0.2",
    "@tsailab/core-types": "0.1.13",
    "@tsailab/ioredis-mq": "0.0.4",
    "chalk": "4.1.2",
    "qcloud-cos-sts": "3.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/",
      "<rootDir>/packages/"
    ],
    "moduleNameMapper": {
      "^@tsailab/common(|/.*)$": "<rootDir>/packages/common/dist/$1",
      "^@tsai-platform/core(|/.*)$": "<rootDir>/packages/core/dist/$1",
      "^@tsailab/system(|/.*)$": "<rootDir>/packages/system/dist/$1"
    }
  }
}
